{
  "name": "vaccination-tracker",
  "version": "1.0.0",
  "description": "A responsive web application for tracking children's vaccination schedules",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "build": "echo 'No build step required for static files'",
    "serve": "python3 -m http.server 8000 || python -m http.server 8000 || npx serve .",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "vaccination",
    "tracker",
    "health",
    "children",
    "pwa",
    "responsive"
  ],
  "author": "VaccinationTracker Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "serve": "^14.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!tests/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
  "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/js/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
} 